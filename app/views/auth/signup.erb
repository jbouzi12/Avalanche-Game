<div id="signup-form" >
  <form action="/signup" method="POST">
    <h2>Sign Up</h2>
    <p>Username</p>
    <input type="text" placeholder="username" name="new_user[username]"><br>
    <p>Password</p>
    <input type="password" placeholder="Password" name="new_user[password]"><br>
    <p>Re-Type</p>
    <input type="password" placeholder="Password" name="new_user[password_confirmation]"><br>
    <button class="btn btn-default cancel-btn">Cancel</button>
    <button type="submit" class="btn btn-primary">Sign Up!</button>
   </form>
</div>